<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Week2.MyOrder">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <!--<Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />-->
            <Button Text = "CHECK CURRENT ORDER" BackgroundColor = "LightBlue" TextColor = "CornflowerBlue" FontSize = "20" CornerRadius = "30" Clicked="Current_Clicked"/>
            <Button Text = "UPDATE CURRENT ORDER" BackgroundColor = "LightBlue" TextColor = "CornflowerBlue" FontSize = "20" CornerRadius = "30" Clicked="Update_Clicked"/>
            <Button Text = "PREVIOUS ORDERS" BackgroundColor = "LightBlue" TextColor = "CornflowerBlue" FontSize = "20" CornerRadius = "30" Clicked="History_Clicked" />
            <Button Text = "NEW ORDERS" BackgroundColor = "LightBlue" TextColor = "CornflowerBlue" FontSize = "20" CornerRadius = "30" Clicked="Add_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>